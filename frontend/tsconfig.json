{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "es2020"],

		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@pages/*": ["pages/*"],
			"@features/*": ["features/*"],
			"@entities/*": ["entities/*"],
			"@widgets/*": ["widgets/*"],
			"@app/*": ["app/*"],
			"@shared/*": ["shared/*"]
		},

		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,

		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
